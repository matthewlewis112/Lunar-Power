<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:text="Friday, June 7"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="23sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />

    <ScrollView
        android:id="@+id/devicesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day"
        android:layout_above="@+id/add_device_task">

        <LinearLayout
            android:id="@+id/dev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                >
                <TextView
                    android:id="@+id/time1"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="Sleep"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="iPhone: Pause Audio Media"
                    android:textColor="@color/text"
                    android:layout_toRightOf="@+id/time1"/>
                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_chevron_right"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                >
                <TextView
                    android:id="@+id/time2"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="2 AM"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Roomba: Start Roomba"
                    android:textColor="@color/text"
                    android:layout_toRightOf="@+id/time2"/>
                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_chevron_right"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                >
                <TextView
                    android:id="@+id/time3"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="3 AM"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Surface Pro: Update PC"
                    android:textColor="@color/text"
                    android:layout_toRightOf="@+id/time3"/>
                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_chevron_right"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/add_device_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Device Task"
        android:background="@drawable/home_button"
        android:textColor="@color/text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        />
</RelativeLayout>
