<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <TextView
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_gravity="center_horizontal"
        android:text="History"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="23sp"/>
    <ScrollView
        android:id="@+id/devicesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/dev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="05/10 Tasks successful"
                android:textColor="#50C878"
                android:textSize="23sp"
                android:padding="40dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="05/03 Device3 Error!"
                android:textColor="#FF0000"
                android:textSize="23sp"
                android:padding="40dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="05/01 Tasks successful"
                android:textColor="#50C878"
                android:textSize="23sp"
                android:padding="40dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="04/30 Tasks successful"
                android:textColor="#50C878"
                android:textSize="23sp"
                android:padding="40dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="04/25 Tasks  successful"
                android:textColor="#50C878"
                android:textSize="23sp"
                android:padding="40dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="04/20 Device7 Error!"
                android:textColor="#FF0000"
                android:textSize="23sp"
                android:padding="40dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
