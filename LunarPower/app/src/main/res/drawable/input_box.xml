<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- border/shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="#3d4c51" android:endColor="#3d4c51" />
            <!--other option: android:endColor="#4a5d63"-->
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Main button -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#364347"
                android:endColor="#364347"
                />
            <!--other option: android:endColor="#dd497f"-->
            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>