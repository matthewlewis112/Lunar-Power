<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- border/shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="@color/colorAccentBevel" android:endColor="@color/colorAccent" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Main button -->
    <item android:top="0dp" android:left="0dp" android:right="1dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="@color/colorAccent"
                android:endColor="@color/colorLiteAccent"
                />
            <!--other option: android:endColor="#dd497f"-->
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>


